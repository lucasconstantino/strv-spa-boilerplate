{
  "name": "graphql-dataviz",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "eslint": "eslint --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint": "run-p lint:**",
    "lint:scripts": "yarn eslint src",
    "lint:styles": "stylelint src",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "prettier-eslint --write",
        "stylelint",
        "git add"
      ],
      "package.json": [
        "yarn sort-package-json",
        "git add"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": "@strv/prettier-config",
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@types/jest": "24.0.12",
    "@types/node": "12.0.0",
    "@types/react": "16.8.16",
    "@types/react-dom": "16.8.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.0",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "@strv/eslint-config-react": "^2.1.0",
    "@strv/eslint-config-typescript": "^1.1.0",
    "@strv/prettier-config": "^1.0.1",
    "@strv/stylelint-config-styled-components": "^1.0.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "npm-run-all": "^4.1.5",
    "prettier-eslint-cli": "^4.7.1",
    "sort-package-json": "^1.22.1"
  }
}
